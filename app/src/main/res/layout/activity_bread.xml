<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 导航栏 -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFBB86FC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:padding="10dp"
            android:text="Make bread"
            android:textAlignment="center"
            android:textSize="22sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigation_bar"
        app:layout_constraintVertical_bias="1.0">

        <!-- Table Row 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ImageButton 1 and Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Imagebutton1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="Image1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ciabatta" />

                <Button
                    android:id="@+id/Button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拖鞋麵包" />
            </LinearLayout>

            <!-- ImageButton 2 and Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ImageButton2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="Imagebutton2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/croissant" />

                <Button
                    android:id="@+id/Button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鹽可頌" />
            </LinearLayout>

        </TableRow>

        <!-- Table Row 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ImageButton 1 and Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ImageButton3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="Image3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lemon" />

                <Button
                    android:id="@+id/Button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="檸檬塔" />
            </LinearLayout>

            <!-- ImageButton 2 and Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ImageButton4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="Image 2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bun" />

                <Button
                    android:id="@+id/Button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爆漿餐包" />
            </LinearLayout>


        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/Button66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主畫面"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
